{{template "base" .}}

{{define "title"}}
    <title>Search</title>
{{end}}

{{define "css"}}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.3.4/dist/css/datepicker-bs4.min.css">
{{end}}


{{define "content"}}
<div class="container text-center mt-5">
      <div class="row">
        <div class="col"></div>
        <div class="col">
          <h2>Search for Availability</h2>
        </div>
        <div class="col"></div>
      </div>
      <div class="row">
        <div class="col"></div>
        <div class="col">
          <form action="/make-reservation" method="get" class="needs-validation" novalidate >
            <div class="form-row" id="reservation-date">
                <div class="col">
                    <input type="text" name="arrival" class="form-control" id="arrival" placeholder="Arrival" autocomplete="off" required>
                </div>
                <div class="col">
                    <input type="text" name="deperture" class="form-control" id="deperture" placeholder="Deperture" autocomplete="off" required>
                </div>
            </div>
            <div class="form-row mt-3">
              <div class="col"></div>
              <div class="col">
                <div class="form-group">
                  <input type="submit" id="submitBtn" class="btn btn-success" value="Search">
                </div>
              </div>
              <div class="col"></div>
            </div>
          </form>
        </div>
        <div class="col"></div>
      </div>
    </div>

    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>

{{end}}


{{define "js"}}
    <script src="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.3.4/dist/js/datepicker-full.min.js"></script>
    <script src="/static/js/form-validation.js"></script>
    <script src="/static/js/date-picker-calender.js"></script>
{{end}}