{{template "base" .}}

{{define "title"}}
    <title>Reservation</title>
{{end}}

{{define "content"}}
<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col"><h2>Traveller's Information</h2><hr id="dashed-2"></div>
        <div class="col"></div>
        
    </div>
    <div class="row  mt-3">
        <div class="col">
            {{$res := index .Data "reservation"}}
            <form action="/make-reservation" method="post" novalidate>
                <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                <div class="form-group">
                    <label for="first_name"><b>First Name:</b></label>
                    {{with .Form.Errors.Get "first_name"}}
                        <label class="text-danger">{{.}}</label>
                    {{end}}
                    <br>
                    <input type="text" name="first_name" id="first_name" class="make_reservation_input {{with .Form.Errors.Get "first_name"}} is-invalid {{end}}" value="{{$res.FirstName}}" required>
                </div>
                <div class="form-group">
                    <label for="last_name"><b>Last Name:</b></label>
                    {{with .Form.Errors.Get "last_name"}}
                        <label class="text-danger">{{.}}</label>
                    {{end}}
                    <br>
                    <input type="text" name="last_name" id="last_name" class="make_reservation_input {{with .Form.Errors.Get "last_name"}} is-invalid {{end}}" value="{{$res.LastName}}" required>
                </div>
                <div class="form-group">
                    <label for="email"><b>Email:</b></label>
                    {{with .Form.Errors.Get "email"}}
                        <label class="text-danger">{{.}}</label>
                    {{end}}
                    <br>
                    <input type="email" name="email" id="email" class="make_reservation_input {{with .Form.Errors.Get "email"}} is-invalid {{end}}" value="{{$res.Email}}" required>
                </div>
                <div class="form-group">
                    <label for="mobile_number"><b>Mobile:</b></label>
                    {{with .Form.Errors.Get "mobile_number"}}
                        <label class="text-danger">{{.}}</label>
                    {{end}}
                    <br>
                    <input type="text" name="mobile_number" id="mobile_number" class="make_reservation_input {{with .Form.Errors.Get "mobile_number"}} is-invalid {{end}}" value="{{$res.MobileNumber}}" required>
                </div>
                <div class="form-group">
                    <label for="all_checked"><input type="checkbox" class="mr-5px" id="all_checked" name="all_checked" {{$res.Checkbox}} required> I confirm that all the information provided in this form is accurate</label>
                </div>
                <div class="text-center">
                    <input type="submit" class="btn btn-success text-center" value="Submit">
                </div>
            </form>
        </div>
    </div>
</div>

{{end}}