{{template "admin" .}}

{{define "css"}}
<style>
    input, textarea{
        line-height: 1.5;
    }
    .submit-btn{
        display: flex;
        justify-content: center;
        align-content: center;
    }
    .thumbnail{
        height: 80%;
        width: 100%;
        top: 10%;
        left: 20%;
        transform: translate(-10%, 5%);
    }
    body {
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: fit-content;
        margin: 0 auto;
        padding: 20px;
        background-color: #f4f4f4;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .form-group {
        margin-bottom: 20px;
    }

    .inputfile {
        display: inline-flex;
        margin-top: 10%;
    }
    .uuid{
        
        background-color: rgb(102, 216, 191);
        color: black;
        transform: translate(-10%, 0%);
    }
    label {
        background-color: #a4cde9;
        color: rgb(0, 0, 0);
        font-weight: bold;
        padding: 5px 5px;
        border-radius: 5px;
        cursor: pointer;
    }

    button {
        background-color: #3498db;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    button:hover {
        background-color: #2980b9;
    }

</style>
{{end}}

{{define "page-title"}}
    Update Room Info
{{end}}


{{define "content"}}
    {{$r := index .Data "room"}}
    <div class="container">
        <div class="row mt-4">
            <form action="/admin/rooms/{{$r.ID}}/edit" method="post" enctype="multipart/form-data">
                <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="room_name">Room Name: </label><br>
                            <textarea name="room_name" id="room_name" class="{{with .Form.Err.Get "room_name"}} is-invalid {{end}}" rows="1" cols="50" required>{{$r.RoomName}}</textarea>
                        </div>
                        <div class="form-group">
                            <label for="subtitle">Subtitle: </label><br>
                            <textarea name="subtitle" id="subtitle" class="{{with .Form.Err.Get "subtitle"}} is-invalid {{end}}" rows="1" cols="50" required>{{$r.Subtitle}}</textarea>
                        </div>
                        <div class="form-group">
                            <label for="body">Body: </label><br>
                            <textarea name="body" id="body" class="{{with .Form.Err.Get "body"}} is-invalid {{end}}" rows="10" cols="50" required>{{$r.Body}}</textarea>
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">
                            <img src="{{$r.Thumbnail}}" class="thumbnail" alt="{{$r.RoomName}}">
                        </div>
                        <div class="row">
                            <div class="form-group mt-4">
                                <label class="uuid">UUID: <b>{{$r.IMGUUID}}</b></label>
                                <label for="img_file"  class="inputfile">Change Room Image:</label>
                                <input type="file" class="inputfile" id="img_file" name="img_file" accept="image/*">
                            </div>
                        </div>   
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="submit-btn">
                        <button type="submit" onclick='saveChanges()'> Save Changes </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{{end}}

{{define "js"}}
    <script src="/static/js/form-validation.js"></script>
    <script>
        let attention = Prompt();
        function saveChanges() {
            attention.custom({
                icon: 'warning',
                msg: 'Are you sure?',
            })
        }
    </script>
{{end}}